#!name=Bilibili（增强）
#!desc=自用
#!system=ios

[Rule]
URL-REGEX,^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.interface\.v1\.Search\/DefaultWords,REJECT
URL-REGEX,^https:\/\/app\.bilibili\.com\/x\/resource\/ip,REJECT

[Map Local]
^https:\/\/app\.bilibili\.com\/x\/resource\/top\/activity data="https://raw.githubusercontent.com/kokoryh/Script/master/data/bili_activity.json" header="Content-Type: application/json"
^https:\/\/api\.live\.bilibili\.com\/xlive\/e-commerce-interface\/v\d\/ecommerce-user\/get_shopping_info\? data="https://raw.githubusercontent.com/kokoryh/Script/master/data/blank_dict.json"
^https:\/\/manga\.bilibili\.com\/twirp\/comic\.v\d\.Comic\/(Flash|ListFlash|GetActivityTab|GetBubbles) data="https://raw.githubusercontent.com/kokoryh/Script/master/data/blank_dict.json"

[Script]
Bilibili-json = type=http-response,pattern=^https:\/\/app\.bilibili\.com\/x\/v2\/(splash\/list|feed\/index\?|account\/myinfo\?|search\/square),script-path=https://raw.githubusercontent.com/kokoryh/Script/master/js/bilibili_json.js,requires-body=1,script-update-interval=-1
Bilibili-proto = type=http-response,pattern=^https:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.(view\.v1\.View\/View|dynamic\.v2\.Dynamic\/DynAll)$,script-path=https://raw.githubusercontent.com/kokoryh/Script/master/js/bilibili-proto.js,requires-body=1,binary-body-mode=1,script-update-interval=-1
Bilibili-live = type=http-response,pattern=^https:\/\/api\.live\.bilibili\.com\/xlive\/app-room\/v1\/index\/getInfoByRoom,script-path=https://raw.githubusercontent.com/kokoryh/Script/master/js/bilibili_json.js,requires-body=1,script-update-interval=-1
Bilibili-bangumi = type=http-response,pattern=^https:\/\/api\.bilibili\.com\/pgc\/page\/(bangumi|cinema\/tab\?),script-path=https://raw.githubusercontent.com/kokoryh/Script/master/js/bilibili_json.js,requires-body=1,script-update-interval=-1
Bilibili-HD = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/v2\/account\/myinfo\?,script-path=https://github.com/ddgksf2013/Scripts/raw/master/bilibili_json.js,requires-body=1,script-update-interval=-1

[MITM]
hostname = %APPEND% grpc.biliapi.net, ap*.bilibili.com, manga.bilibili.com, api.live.bilibili.com
